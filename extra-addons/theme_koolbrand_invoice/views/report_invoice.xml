<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1. The Assets Check (Empty but good practice) -->
    <!-- We don't necessarily need asset injection here if we use inline info, but keeping standard structure -->

    <!-- 2. The Invoice Report Content -->
    <!-- Inherits from standard invoice and replaces content globally -->
    <template id="koolbrand_body_extension" inherit_id="account.report_invoice_document" priority="999">
        <!-- We do NOT override t-call here. We rely on the Company Settings "Document Layout" 
             to map web.external_layout -> koolbrand_layout. 
             This view only handles the BODY content replacement. -->
        
        <xpath expr="//div[hasclass('page')]" position="replace">
            <div class="page" style="font-family: 'Montserrat', sans-serif; color: #555;">
                <!-- STANDARD ODOO HOOKS (Hidden but present to satisfy inheritance) -->
                <div style="display: none;">
                    <div id="qrcode"/>
                    <div id="informations"/>
                    <p name="payment_communication">
                         <t t-if="o.partner_bank_id"/>
                    </p>
                    <p name="payment_term"/>
                    <div name="comment"/>
                </div>
                
                <div class="row mt-5 mb-5">
                    <div class="col-6">
                        <div t-field="o.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        <div t-if="o.partner_id.vat" class="mt16">
                            <t t-if="o.company_id.account_fiscal_country_id.vat_label" t-esc="o.company_id.account_fiscal_country_id.vat_label" id="inv_tax_id_label"/>
                            <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/>
                        </div>
                    </div>
                    <div class="col-6 text-right" style="text-align: right;">
                        <p>
                            Fecha: <span t-field="o.invoice_date"/><br/>
                            Factura# <span t-field="o.name"/>
                        </p>
                    </div>
                </div>

                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>

                <table class="table table-sm o_main_table" name="invoice_line_table">
                    <thead style="background-color: #A3D16D !important; color: white !important;">
                        <tr style="background-color: #A3D16D !important; color: white !important;">
                           <th name="th_quantity" class="text-start" style="color: white !important;">Cantidad</th>
                            <th name="th_description" class="text-start" style="color: white !important;">Descripción</th>
                            <th name="th_priceunit" class="text-end" style="color: white !important;">Precio unitario</th>
                            <th name="th_taxes" class="text-end" style="color: white !important;">IVA</th>
                            <th name="th_subtotal" class="text-end" style="color: white !important;">
                                <span groups="account.group_show_line_subtotals_tax_excluded">Precio</span>
                                <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                        <t t-foreach="lines" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                style="background-color: 40px;"> <!-- Alternating logic needs t-foreach index or css nth-child -->
                                <t t-if="line.display_type == 'product'">
                                    <td class="text-start" style="padding: 15px 10px; background-color: #EDF6DF;">
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td name="account_invoice_line_name" style="padding: 15px 10px; background-color: #EDF6DF;">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <td class="text-end" style="padding: 15px 10px; background-color: #EDF6DF;">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td class="text-end" style="padding: 15px 10px; background-color: #EDF6DF;">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                    </td>
                                    <td class="text-end" style="padding: 15px 10px; background-color: #EDF6DF;">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-end">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix">
                    <div id="total" class="row">
                        <div class="col-7"></div> <!-- Spacer -->
                        <div class="col-5">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <tr class="border-black o_subtotal" style="">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-end">
                                        <span t-field="o.amount_untaxed"/>
                                    </td>
                                </tr>
                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                            <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                            <td class="text-end o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-esc="amount_by_group[0]"/>
                                                <span class="text-nowrap"> on
                                                    <t t-esc="amount_by_group[4]"/>
                                                </span>
                                            </td>
                                            <td class="text-end o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total" style="background-color: #EEE; font-weight: bold;">
                                    <td><strong>Total</strong></td>
                                    <td class="text-end">
                                        <span t-field="o.amount_total"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer o_standard_footer">
            <div class="row align-items-end" style="width: 100%;">
                <div class="col-6">
                    <p style="color: #777; font-size: 10px;">
                        Forma de pago: <span t-esc="o.invoice_payment_term_id.name"/><br/>
                        Fecha vencimiento: <span t-field="o.invoice_date_due"/><br/>
                        IBAN: <span t-if="o.partner_bank_id" t-field="o.partner_bank_id.acc_number"/>
                        <span t-if="not o.partner_bank_id">N/A</span>
                    </p>
                    <div style="color: #8CC63F; font-size: 11px;">
                        <span t-field="company.website"/> • <span t-field="company.email"/> • <span t-field="company.phone"/>
                    </div>
                </div>
                <div class="col-6 text-right" style="text-align: right;">
                     <img src="/theme_koolbrand_invoice/static/src/img/footer_logo.png" style="max-height: 100px;"/>
                     <div class="text-muted" style="font-size: 11px; margin-top: 5px;">
                        Page <span class="page"/> / <span class="topage"/>
                     </div>
                </div>
            </div>
        </div>
    </template>
</odoo>