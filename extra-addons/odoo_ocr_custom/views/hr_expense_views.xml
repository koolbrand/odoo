<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_expense_view_form_inherit_base_imponible" model="ir.ui.view">
        <field name="name">hr.expense.view.form.inherit.base.imponible</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='total_amount_currency']" position="before">
                <field name="untaxed_amount_currency" string="Base imponible" widget="monetary" options="{'currency_field': 'currency_id'}" invisible="product_has_cost" readonly="True"/>
            </xpath>
        </field>
    </record>
</odoo>